<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <VideoView
    android:id="@+id/back_video"
    android:layout_width="900dp"
    android:layout_height = "wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentTop="true"
    android:layout_gravity="center" />



    <ImageView
        android:id="@+id/relicon_h"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:srcCompat = "@raw/relicon_preview"
        />



    <Button
        android:id="@+id/nextToBracletQuestion"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_below="@+id/relicon_h"
        android:layout_marginTop="-30dp"
        android:layout_centerHorizontal="true"
        android:text="ДАЛЕЕ >"
        android:alpha="0.7"
        android:textColor="@color/black"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/miband5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/nextToBracletQuestion"
        app:srcCompat = "@raw/miband5"
        />

    <Button
        android:id="@+id/yes_miband5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="45dp"
        android:layout_marginBottom="130dp"
        android:text="Да" />
    <Button
        android:id="@+id/no_miband5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="130dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="45dp"
        android:text="Нет"
        />
    <TextView
        android:id="@+id/info_miband5"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Мы можем отслеживать время сна при помощи вашего фитнес браслета в Google Fit, если он имеется. Попробовать подключиться?"
        android:textSize="20sp"
        android:layout_alignParentTop="true"
        android:textAlignment="center"
        android:layout_marginTop="70dp"
        android:textColor="@color/white"
        android:textColorHighlight="@color/black"
        />
</RelativeLayout>
